<% layout('layouts/boilerplate')%>
<link rel="stylesheet" href="/stylesheets/home.css">

<!-- prettier-ignore -->
<!-- <div class="container d-flex justify-content-between mt-5"> -->
<div class="mt-3">
  <div class="col-sm-10 offset-sm-1 col-md-10 offset-md-1 bg-white rounded p-3  min-vh-100">
      <h1 class="ps-1 bg-white p-3 mb-3 text-center p-4">
        <%= productCategory %>s
      </h1>
      <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-4 mt-2 mb-5">
        <% for(product of products){ %>
            <div class="col">
              <div class="card h-100">
                <a href="/products/<%=product.id%>">
                  <% if(product.images.length){ %> 
                    <img class="img-fluid card-img-top" alt="Product Image" src="<%=product.images[0].url %>" />
                    <% } else {%>
                      <img class="img-fluid" alt="" src="https://images.unsplash.com/photo-1598472142296-b9e8f89bd9a5?ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&ixlib=rb-1.2.1&auto=format&fit=crop&w=1100&q=80" />
                      <% } %>  
                </a>
                <div class="card-body">
                    <h5 class="card-title"><%= product.title %></h5>
                    <p class="card-text"><%= product.description %></p>
                </div>
                <div class="card-footer bg-white d-flex justify-content-around align-items-center">
                    <p class="card-text col-6 col-md-5 ps-4 ps-sm-2 ps-md-3 m-0">&#3647; <%= product.price %> </p>
                    <a href="/products/<%=product._id%>" class="btn btn-success col-6 col-md-7 mx-2">View Product</a>
                </div>
              </div>
            </div>
        <% } %> 
    </div>
  </div>
</div>


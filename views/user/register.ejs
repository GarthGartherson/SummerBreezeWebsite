    <div class="col-sm-8 col-md-6 col-lg-4 position-absolute top-50 start-50 translate-middle">
        <div id="first">
            <div class="myform form ">
                <div class="logo mb-3">
                    <div class="col-md-12 my-3 text-center">
                        <h1>Register</h1>
                    </div>
                </div>
            <form action="/user/register" method="POST" class="validated-form" novalidate>
                <div class="mb-3">
                    <label class="form-label" for="username">Username</label>
                    <input class="form-control" type="text" id="username" name="username" placeholder="Enter Username" required>
                    <div class="valid-feedback">
                        Looks Good!
                    </div>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="email">Email</label>
                    <input class="form-control" type="email" id="email" name="email" required>
                    <div class="valid-feedback">    
                        Looks Good!
                    </div>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="password">Password</label>
                    <input class="form-control" type="password" id="password" name="password" required>
                    <div class="valid-feedback">    
                        Looks Good!
                    </div>
                </div>
                <div class="mb-4">
                    <label class="form-label" for="adminCode">Code (Optional): </label>
                    <input class="form-control" type="text" id="adminCode" name="adminCode">
                </div>
                <div class="form-group">
                    <p class="text-center">By signing up you accept our <a href="#">Terms Of Use</a></p>
                </div>
                <div class="col-md-12 text-center mb-2">
                    <button type="submit" class=" btn btn-block mybtn btn-primary tx-tfm">Register</button>
                </div>
            </form>
            
            </div>
        </div>
    </div>

